{
  "compilerOptions": {
    "removeComments": true,
    "moduleResolution": "Node",
    "strict": true,
    "strictPropertyInitialization": false,
    "jsx": "preserve",
    "allowJs": false,
    "target": "ES2021",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist",
  },
  "include": ["./src/**/*"]
}
